<%= form_for(@provider) do |f| %>
  <% if @provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
      <% @provider.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :last_name_1 %><br>
    <%= f.text_field :last_name_1 %>
  </div>
  <div class="field">
    <%= f.label :last_name_2 %><br>
    <%= f.text_field :last_name_2 %>
  </div>
  <div class="field">
    <%= f.label :dni %><br>
    <%= f.text_field :dni %>
  </div>

  <div class="col-md-6">
    <label>¿A qué categoría perteneces?</label>
    <%= f.collection_select(:category_id, Category.all, :id, :name, :style => "width:50%") %>
  </div> <br>

  <%= hidden_field_tag "provider[location_ids][]", nil %>
  <% Location.all.each do |location| %>
    <%= check_box_tag "provider[location_ids][]", location.id, @provider.location_ids.include?(location.id), id: dom_id(location) %>
    <%= label_tag dom_id(location), location.name %><br>
  <% end %>

  <div class="form-group mt-14">
    <%= f.submit "Actualizar perfil", id: "submit", class: "btn btn-info-grad" %>
  </div>

<% end %>
