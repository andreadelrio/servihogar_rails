<div class="main-nav bg-primary mt--7" id="top">
  <div class="container bg-primary">
    <nav class="navbar">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mob-menu">
          <span class="fa-bars text-muted"></span>
          <% if current_provider %>
            <small class="text-muted">MENÚ</small>
          <% else %>
            <small class="text-muted">INGRESAR</small>
          <% end %>  
        </button>
        <div class=" p-7 bg-primary mt-7">
          <%= link_to image_tag('logo.png', class: "mt--14"), root_url %>
          <%= link_to "Servihogar", root_url, class: "medium h4 text-muted" %>
        </div>
      </div>
      <div class="collapse navbar-collapse" id="mob-menu">
        <ul class="nav navbar-right hidden-sm">
            <% if current_provider %>
            <li class="dropdown mt-7 hidden-sm hidden-xs">
              <a href="#" class="dropdown-toggle text-muted" data-toggle="dropdown">Hola, <%= current_provider.name %> <i class="fa-caret-down"></i></a>
              <ul class="dropdown-menu">
                <li><%= link_to '<i class="fa-edit"></i> Actualizar mi perfil'.html_safe, edit_provider_path(current_provider) %></li>
                <li class="divider"></li>
                <li><%= link_to '<i class="fa-power-off"></i> Salir'.html_safe, salir_path, :method => :delete, class: "text-danger" %></li>
              </ul>
            </li>
            <li class="hidden-lg hidden-md">
              <ul class="list-group m-0 pt-7">
                <li class="list-group-item"><%= link_to '<i class="fa-edit"></i> Actualizar mi perfil'.html_safe, 'root_path' %></li>
                <li class="list-group-item"><%= link_to '<i class="fa-power-off"></i> Salir'.html_safe, salir_path, :method => :delete, class: "text-danger" %></li>
              </ul>
            </li>
            <% else %>
            <span class="mt-21 text-muted hidden-sm hidden-xs"><%= link_to 'Ingresa a tu cuenta'.html_safe, new_providers_session_path, class: "not-underline" %></span>
            <li class="hidden-lg hidden-md">
              <%= form_tag providers_sessions_path, :class => "form-inline mb-0 user-login-header-form" do %>
              <div class="form-group mr-7">
                <label class="hidden-lg hidden-md hidden-sm text-muted">Ingreso de proveedores</label>
                <%= email_field_tag :email, params[:email], :autofocus => true, :class => "form-control input-sm", :placeholder => "Correo electrónico" %>
              </div>
              <div class="form-group mr-7">
                <%= password_field_tag :password, nil, class: "form-control input-sm", :placeholder => "Contraseña" %>
              </div>
              <div class="form-group text-center">
                <%= submit_tag "Ingresa", id: "user_login_button", class: "btn btn-info-grad btn-sm" %>
              </div>
            <% end %>
            </li>
            <% end %>
          </li>
        </ul>
        </div>
      </div>
    </nav>
  </div>
</div>